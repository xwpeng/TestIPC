<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.xwpeng.testipc.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main!" />

    <Button
        android:id="@+id/main_start_email"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="start email"
        />

    <Button
        android:id="@+id/main_start_push_receiver"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="start pushreceiver"
        />
    <Button
        android:id="@+id/main_serial_user"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="serial user"
        />
    <Button
        android:id="@+id/main_unserial_user"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="unserial user"
        />

</LinearLayout>
